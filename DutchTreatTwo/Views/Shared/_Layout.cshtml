<!DOCTYPE html>
<html>
<head>
   <title>Dutch Treat: @ViewBag.Title</title>
   <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
   <link href="~/css/bootstraptemp.css" rel="stylesheet" />
   <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
   <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="container">
   <header>
      <nav class="navbar navbar-dark bg-dark navbar-expand-md">
         <h1 class="navbar-brand">Welcome to Dutch Treat</h1>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#theMenu">
            <span class="navbar-toggler-icon"></span>
         </button>
         <div id="theMenu" class="collapse navbar-collapse">
            <ul class="navbar-nav">
               <li class="nav-item">
                  <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" asp-controller="App" asp-action="Contact">Contact Us</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" asp-controller="App" asp-action="About">About Us</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a>
               </li>
               @if (User.Identity.IsAuthenticated)
               {
                  <li class="nav-item">
                     <a class="nav-link" asp-controller="Account" asp-action="LogoutAsync">Logout</a>
                  </li>
               }
               else
               {
                  <li class="nav-item">
                     <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                  </li>
               }
               
            </ul>
         </div>
      </nav>
   </header>

   <section>
      <h2 class="text-center">@ViewBag.Title</h2>
      @RenderBody()
   </section>

   <footer class="text-center">Copyright @DateTime.Now.Year Dutch Treat LLC</footer>

   <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
   <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/js/index.js"></script>

   @RenderSection("Scripts", false)
</body>
</html>